---
import HeaderLink from './HeaderLink.astro';
---
<div class="internal-links">
    <ul>
        <li><HeaderLink class="palabrasMenu" href="/">Inicio</HeaderLink></li>
        <li><HeaderLink class="palabrasMenu" href="/about">Sobre nosotros</HeaderLink></li>
        <li><HeaderLink class="palabrasMenu" href="/actividades">Actividades</HeaderLink>
            <ul>
            <li><HeaderLink class="submenuLinks" href="/clubs">Clubs</HeaderLink></li>
            <li><HeaderLink class="submenuLinks"href="/campa">Campamentos</HeaderLink></li>
            <li><HeaderLink class="submenuLinks"href="/otrasactividades">Otros</HeaderLink></li>
            </ul>
        </li>
        <li><HeaderLink class="palabrasMenu" href="/contacto">Contacto</HeaderLink></li>
        <li><HeaderLink class="palabrasMenu" href="/donaciones">Donaciones</HeaderLink></li>
        <li><HeaderLink class="palabrasMenu" href="/testimonios">Testimonios</HeaderLink></li>
    </ul>
</div>

<style>
    .palabrasMenu {
        padding: 1em 0.5em;
        color: var(--black) !important;
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }

    .internal-links li:hover {
        color: var(--verdeYL);
    }

    .palabrasMenu.active {
        text-decoration: none;
        border-bottom-color: var(--amarillo);
    }

    .internal-links ul ul {
        display: none;
        background-color: rgb(238, 238, 238);
        position: absolute;
        top: 80%;
        left: 0;
        z-index: 1;
    }

    .internal-links li:hover > ul {
        display: inherit;
        
    }
    
    .internal-links ul {
    list-style: none;
    margin: 0;
    padding: 0;
    }

    .internal-links li {
        display: inline-block;
        position: relative;
    }

    .submenuLinks{
    padding: 0.5em !important;
    color: black;
    text-decoration: none;
    }

    .submenuLinks:hover{
        color: var(--verdeYL);
    }

    .submenuLinks.active{
        text-decoration: none;
    }

    @media (max-width: 720px){
        .internal-links {
        display: none; /* Oculta el menú por defecto en pantallas pequeñas */
        flex-direction: column; /* Cambia la dirección a columna */
        background-color: rgba(255, 255, 255, 0.745); /* Fondo blanco semi-transparente */
        position: fixed; /* Fija el menú en la parte superior */
        width: 50%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 100;
        backdrop-filter: blur(7px); /* Efecto de desenfoque */
        padding: 20px; /* Añade un poco de espacio alrededor */
        animation-name: example;
        animation-duration: 2s;
        animation-iteration-count: 1;
    }

    @keyframes example {
        0%   {background-color:rgb(255, 255, 255); left:-300px; top:0px; right: 500px;}
        25%  {background-color:rgb(255, 255, 255); left:0px; top:0px;}
    }

    .internal-links.expanded {
        display: flex;
        right: 50%;
    }

    .internal-links ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }


    .palabrasMenu {
        padding: 0.3em;
        margin: 0.5em;
        color: var(--black) !important;
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }

    .palabrasMenu.expanded {
        text-decoration: none;
        border-bottom-color: var(--amarillo);
    }
    }
</style>